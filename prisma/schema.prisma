generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Word {
  id           String            @id @default(uuid())
  word         String
  type         String
  gender       String?
  plural       String?
  level        String
  definition   String
  examples     String[]
  conjugations VerbConjugation[]
}

model VerbConjugation {
  id     String @id @default(uuid())
  verb   Word   @relation(fields: [verbId], references: [id])
  verbId String
  tense  String
  mood   String
  person String
  form   String
}

model GrammarTopic {
  id       String   @id @default(uuid())
  title    String
  body     String
  examples String[]
}

model Phrase {
  id      String @id @default(uuid())
  topic   String
  german  String
  english String
}
